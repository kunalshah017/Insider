# Polymarket Builder API Credentials
# Get these from https://polymarket.com/settings?tab=builder
POLY_BUILDER_API_KEY=your_api_key_here
POLY_BUILDER_SECRET=your_secret_here
POLY_BUILDER_PASSPHRASE=your_passphrase_here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS=chrome-extension://your-extension-id,http://localhost:3000

# Polymarket API URLs
CLOB_API_URL=https://clob.polymarket.com
GAMMA_API_URL=https://gamma-api.polymarket.com
